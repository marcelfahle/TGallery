<%= form_for @gallery, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="row">
    <div class="span12">

      <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :email, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :is_active, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :is_active, :class => 'check_box' %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :has_rating, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :has_rating, :class => 'check_box' %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :has_comments, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :has_comments, :class => 'check_box' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :show_names, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :show_names, :class => 'check_box' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :has_upload, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :has_upload, :class => 'check_box' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :description, "Galerie-Beschreibung",  :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, :class => 'text_area input-xlarge', :rows => 5 %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :instructions, "Upload Instruktionen", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :instructions, :class => 'text_area input-xlarge', :rows => 5 %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :confirmation_text, "Upload Bestaetigung", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :confirmation_text, :class => 'text_area input-xlarge', :rows => 5 %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :tos_text, "Datenschutz-Link",  :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :tos_text, :class => 'text_area input-xlarge', :rows => 3 %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span6">

      <h4>Gallery Design</h4>

      <div class="control-group">
        <%= f.label :background, :class => 'control-label' %>
        <div class="controls">
          <%= f.file_field :background, :class => 'text_field' %>
          <%= image_tag @gallery.background_url(:thumb).to_s %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label "Delete Background", :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :remove_background %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :background_color, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :background_color, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :site_width, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :site_width, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :text_color, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :text_color, :class => 'text_field' %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :show_headline, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :show_headline, :class => 'check_box' %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :headline_color, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :headline_color, :class => 'text_field' %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :top_margin, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :top_margin, :class => 'text_field' %>
        </div>
      </div>
    </div>

    <div class="span6">
      <h4>Photo Settings</h4>

      <div class="control-group">
        <%= f.label :photo_border, :class => 'control-label' %>
        <div class="controls">
          <%= f.check_box :photo_border, :class => 'check_box' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :photo_border_color, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :photo_border_color, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :photo_border_width, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :photo_border_width, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :thumb_size, :class => 'control-label' %>
        <div class="controls">
          <%= f.select("thumb_size", %w[large medium small]) %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                galleries_path, :class => 'btn' %>
  </div>
<% end %>
